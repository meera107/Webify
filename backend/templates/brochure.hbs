<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{business_name}} - Product Catalog</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
            background: white;
            color: #1a1a1a;
        }
        
        .catalog-header {
            background: linear-gradient(135deg, {{brand_color}} 0%, {{brand_color}}dd 100%);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
        }
        
        .catalog-header h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }
        
        .catalog-header p {
            font-size: 1.2rem;
            opacity: 0.95;
        }
        
        .products-container {
            max-width: 1200px;
            margin: 3rem auto;
            padding: 0 2rem;
        }
        
        .products-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 2rem;
        }
        
        .product-card {
            border: 2px solid #e5e5e5;
            border-radius: 15px;
            overflow: hidden;
            background: white;
            page-break-inside: avoid;
        }
        
        .product-image {
            width: 100%;
            height: 250px;
            object-fit: cover;
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
        }
        
        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .product-details {
            padding: 1.5rem;
        }
        
        .product-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 0.75rem;
        }
        
        .product-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: #1a1a1a;
        }
        
        .product-price {
            font-size: 1.5rem;
            font-weight: 800;
            color: {{brand_color}};
            white-space: nowrap;
        }
        
        .product-category {
            display: inline-block;
            background: {{brand_color}}22;
            color: {{brand_color}};
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
        }
        
        .product-description {
            color: #666;
            line-height: 1.6;
            font-size: 0.95rem;
        }
        
        .catalog-footer {
            background: #1a1a1a;
            color: white;
            padding: 2rem;
            text-align: center;
            margin-top: 3rem;
        }
        
        .contact-info {
            margin-top: 1rem;
            font-size: 0.95rem;
            opacity: 0.9;
        }
        
        @media print {
            .products-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .product-card {
                page-break-inside: avoid;
            }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="catalog-header">
        <h1>{{business_name}}</h1>
        <p>{{industry}} Product Catalog</p>
    </div>

    <!-- Products Grid -->
    <div class="products-container">
        <div class="products-grid">
            {{#each products}}
            <div class="product-card">
                <div class="product-image">
                    {{#if image_url}}
                    <img src="http://localhost:3001{{image_url}}" alt="{{product_name}}">
                    {{else}}
                    ðŸ“¦
                    {{/if}}
                </div>
                <div class="product-details">
                    {{#if category}}
                    <div class="product-category">{{category}}</div>
                    {{/if}}
                    <div class="product-header">
                        <div class="product-name">{{product_name}}</div>
                        <div class="product-price">${{price}}</div>
                    </div>
                    {{#if description}}
                    <div class="product-description">{{description}}</div>
                    {{/if}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    <!-- Footer -->
    <div class="catalog-footer">
        <p>&copy; 2025 {{business_name}}. All rights reserved.</p>
        {{#if contact_email}}
        <div class="contact-info">
            Contact: {{contact_email}}
            {{#if contact_phone}} | {{contact_phone}}{{/if}}
        </div>
        {{/if}}
    </div>
</body>
</html>